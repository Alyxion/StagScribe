-- Butterfly (larger, more visible, in flight above flowers)
ellipse "WingBL" 24 by 30 fill cornflowerblue opacity 0.75 at 320 175
ellipse "WingBR" 24 by 30 fill cornflowerblue opacity 0.75 at 350 175
ellipse "WingBLInner" 12 by 16 fill royalblue opacity 0.6 at 324 178
ellipse "WingBRInner" 12 by 16 fill royalblue opacity 0.6 at 346 178
rectangle "BodyBF" 3 by 20 fill #333333 at 335 175

-- Garden path (wider and more visible)
path "GardenPath"
  d "M380 500 Q385 460 395 430 Q410 400 400 375"
  stroke sandybrown 20 pixels
  opacity 0.45
